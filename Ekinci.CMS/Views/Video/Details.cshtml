@model Ekinci.CMS.Business.Models.Responses.VideosResponses.GetVideoResponse

<div class=" flex-column " id="kt_wrapper">
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <div class="post d-flex flex-column-fluid" id="kt_post">
            <div id="kt_content_container" class="container-xxl">
                <div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
                    <div class="cursor-pointer">
                        <div class="card-header">
                            <h3 class="card-title">VİDEO</h3>
                            <div class="card-toolbar">
                                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success align-self-center">DÜZENLE</a>&nbsp;
                                <a href="@Url.Action("Index","Video")" class="btn btn-danger btn-hover-rotate-start">GERİ DÖN</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-9">
                        <div class="row mb-7">
                            <label class="col-lg-2 fw-bold text-muted">Video</label>
                            <div class="col-lg-7">
                                <video style="width: 100%; border-radius: 2px; margin-left: auto; margin-right: auto" controls="controls">
                                    <source src="@Model.VideoUrl" type="video/mp4" />
                                    <source src="@Model.VideoUrl" type="video/ogg" />
                                    Tarayıcınız video etiketini desteklemiyor.
                                </video>
                            </div>
                            <div class="col-lg-3"></div>
                        </div>
                    </div>
                    <div class="card-body p-9">
                        <div class="row mb-7">
                            <label class="col-lg-4 fw-bold text-muted">Başlık</label>
                            <div class="col-lg-8">
                                <span class="fw-bolder fs-6 text-gray-800">@Model.Title</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-9">
                        <div class="row mb-7">
                            <label class="col-lg-4 fw-bold text-muted">Açıklama</label>
                            <div class="col-lg-8">
                                <span class="fw-bolder fs-6 text-gray-800">@Model.Description</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>