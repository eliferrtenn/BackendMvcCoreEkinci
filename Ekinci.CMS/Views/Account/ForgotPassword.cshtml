@model Ekinci.CMS.Business.Models.Requests.AccountRequests.ForgotPasswordRequest
@{
    Layout = "_LayoutPublic";
}
<div class="d-flex flex-column flex-root">
    <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed">
        <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
            <a href="#" class="mb-8 text-center">
                <img alt="Logo" src="~/assets/media/logos/ekinciLogo.png" class="h-xl-50px h-lg-25px mb-4" />
            </a>
            <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
                <form class="form w-100" novalidate="novalidate" asp-action="ForgotPassword">
                    <div class="py-20">
                        <div class="card-body">
                            <div class="text-start mb-10">
                                <h1 class="text-dark mb-3 fs-3x">@_localizer["ForgotPassword"]</h1>
                            </div>
                            <div class="fv-row mb-8">
                                <input type="text" asp-for="Email" placeholder="E-Posta" class="form-control form-control-solid" autocomplete="off" />
                                <span class="fv-plugins-message-container invalid-feedback" asp-validation-for="Email"></span>
                            </div>
                            <div class="d-flex flex-stack">
                                <div class="m-0">
                                    <button type="submit" class="btn btn-primary me-2 flex-shrink-0">Gönder</button>
                                    <a href="/Account/SignIn" class="btn btn-lg btn-light-primary fw-bold">@_localizer["Cancel"]</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
                <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-10">
                    <span class="svg-icon svg-icon-2 svg-icon-gray-800">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.60001 11H21C21.6 11 22 11.4 22 12C22 12.6 21.6 13 21 13H9.60001V11Z" fill="currentColor"></path>
                            <path opacity="0.3" d="M9.6 20V4L2.3 11.3C1.9 11.7 1.9 12.3 2.3 12.7L9.6 20Z" fill="currentColor"></path>
                        </svg>
                    </span>
                    <div></div>
                    <a href="/Account/SignIn" class="link-primary">@_localizer["TurnBack"]</a>
                </div>
            </div>
        </div>

    </div>
</div>